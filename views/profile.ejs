<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }

        h1, h2, nav {
            font-family: 'Poppins', sans-serif;
        }
    </style>
</head>

<body class="bg-gray-50">

    <!-- Navigation Bar -->
    <nav class="bg-blue-500 text-white p-4">
        <div class="container mx-auto flex justify-between items-center">
            <div class="text-xl font-bold">Twitter</div>
            <div>
                <a href="/welcome" class="mx-4 hover:text-gray-300">Home</a>
                <a href="/profile" class="mx-4 hover:text-gray-300">Profile</a>
                <a href="/logout" class="mx-4 hover:text-gray-300">Logout</a>
            </div>
        </div>
    </nav>

    <!-- Profile Section -->
    <div class="container mx-auto mt-8 max-w-4xl p-6 bg-white rounded-lg shadow-lg">
        <div class="flex items-center space-x-6">
            <!-- Profile Picture -->
            <img 
                src="https://via.placeholder.com/150" 
                alt="User Profile Picture" 
                class="w-32 h-32 rounded-full border-4 border-blue-500"
            >

            <!-- User Info -->
            <div>
                <h1 class="text-3xl font-semibold text-gray-800"><%= user.username %></h1>
                <p class="text-gray-500 mt-1">Web Developer | Tech Enthusiast</p>
                <p class="mt-4 text-gray-600">Joined: <span class="font-medium">January 2020</span></p>
            </div>
        </div>
    </div>

    <!-- User's Tweets Section -->
    <div class="container mx-auto mt-6 max-w-4xl">
        <h2 class="text-2xl font-semibold text-gray-800 mb-4">Your Tweets</h2>
        <div class="space-y-6">
            <% user.tweets.forEach(function(tweet) { %>
            <div class="bg-white p-6 rounded-lg shadow-md">
                <p class="text-gray-800 text-lg font-medium"><%= tweet.text %></p>
                <p class="text-gray-500 text-sm mt-2">Posted on: <%= tweet.createdAt.toDateString() %></p>
            </div>
            <% }) %>
        </div>
    </div>

</body>

</html>
